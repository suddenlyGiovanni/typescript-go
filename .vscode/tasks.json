{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "npm",
            "script": "build",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Watch",
            "type": "npm",
            "script": "build:watch:debug",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "fileLocation": "autoDetect",
                "source": "hereby",
                "applyTo": "closedDocuments",
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "\\[build:watch\\] changed due to",
                    "endsPattern": "\\[build:watch\\] run complete"
                }
            }
        },
        {
            "label": "Compile extension",
            "type": "npm",
            "script": "extension:build",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                "$tsc",
                // Copy-paste from https://github.com/connor4312/esbuild-problem-matchers to avoid the extension dependency
                {
                    "owner": "esbuild",
                    "severity": "error",
                    "applyTo": "closedDocuments",
                    "source": "esbuild",
                    "fileLocation": "relative",
                    "pattern": [
                        {
                            "regexp": "^[✘▲] \\[([A-Z]+)\\] (.+)",
                            "severity": 1,
                            "message": 2
                        },
                        {
                            "regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ]
                }
            ]
        },
        {
            "label": "Watch extension",
            "type": "npm",
            "script": "extension:watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            // Copy-paste from https://github.com/connor4312/esbuild-problem-matchers to avoid the extension dependency
            "problemMatcher": {
                "owner": "esbuild-watch",
                "severity": "error",
                "applyTo": "closedDocuments",
                "source": "esbuild",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "^[✘▲] \\[([A-Z]+)\\] (.+)",
                        "severity": 1,
                        "message": 2
                    },
                    {
                        "regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "\\[watch\\] build started"
                    },
                    "endsPattern": {
                        "regexp": "\\[watch\\] build finished"
                    }
                }
            }
        },
        {
            "label": "Watch for extension run",
            "dependsOn": [
                "Watch extension",
                "Watch"
            ]
        }
    ]
}
