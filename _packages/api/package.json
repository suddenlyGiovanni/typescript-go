{
    "private": true,
    "name": "@typescript/api",
    "version": "1.0.0",
    "type": "module",
    "engines": {
        "node": ">=20.19"
    },
    "imports": {
        "#enums/*": {
            "@typescript/source": {
                "types": "./src/enums/*.enum.ts",
                "default": "./src/enums/*.ts"
            },
            "types": "./dist/enums/*.enum.d.ts",
            "default": "./dist/enums/*.js"
        }
    },
    "exports": {
        "./sync": {
            "@typescript/source": "./src/sync/api.ts",
            "default": "./dist/sync/api.js"
        },
        "./async": {
            "@typescript/source": "./src/async/api.ts",
            "default": "./dist/async/api.js"
        },
        "./fs": {
            "@typescript/source": "./src/fs.ts",
            "default": "./dist/fs.js"
        },
        "./proto": {
            "@typescript/source": "./src/proto.ts",
            "default": "./dist/proto.js"
        }
    },
    "scripts": {
        "node": "node --experimental-strip-types --no-warnings --conditions @typescript/source",
        "generate:sync": "node --experimental-strip-types --no-warnings scripts/generate-sync.ts",
        "generate:enums": "npx hereby generate:enums --herebyfile ../../Herebyfile.mjs",
        "prebuild": "npm run generate:enums && npm run generate:sync",
        "build": "tsc -b",
        "prebuild:test": "npm run generate:enums && npm run generate:sync",
        "build:test": "tsc -b test",
        "prebench": "npm run generate:enums && npm run generate:sync",
        "bench": "npm run node -- test/api.bench.ts",
        "pretest": "npm run generate:enums && npm run generate:sync",
        "test": "npm run node -- --test ./test/**/*.test.ts"
    },
    "devDependencies": {
        "tinybench": "^6.0.0"
    },
    "dependencies": {
        "@types/node": "^25.2.3",
        "@typescript/ast": "1.0.0",
        "vscode-jsonrpc": "^9.0.0-next.11"
    }
}
